{
    "name": "DoceboIntegration",

    "namespace": "Stanford\\DoceboIntegration",

    "description": "This module enrolls users requesting access to E-Reg into Docebo learning plans according to their role.",

    "documentation": "README.md",

    "framework-version": 16,

    "authors": [
        {
            "name": "Ihab Zeedia",
            "email": "ihab.zeedia@stanford.edu",
            "institution": "Stanford Health Care"
        }
    ],


    "enable-every-page-hooks-on-system-pages": false,
    "links": {
        "project": [
            {
                "name": "Docebo Test Page",
                "icon": "fas fa-check-circle",
                "url": "pages/test.php",
                "show-header-and-footer": true
            }
        ],
        "control-center": [

        ]
    },

    "no-auth-pages": [

    ],

    "project-settings": [
        {
            "key": "e-reg-request-forms",
            "name": "<b>E-Reg Request Survey</b><br/>The survey form that a user will be enrolled in Docebo learning plan after completion.",
            "required": true,
            "type": "form-list"
        },
        {
            "key": "docebo-enrollment-form",
            "name": "<b>Docebo Enrollment Form</b><br/>The form that contains the Docebo Course ID and Docebo User ID fields.",
            "required": true,
            "type": "form-list"
        },
        {
            "key": "docebo-user-id-field",
            "name": "<b>Docebo User ID Field</b>",
            "required": false,
            "type": "field-list"
        },
        {
            "key": "docebo-enrollment-status-field",
            "name": "<b>Docebo Enrollment Status</b>",
            "required": false,
            "type": "field-list"
        },
        {
            "key": "docebo-course-id-field",
            "name": "<b>Docebo Course Id</b>",
            "required": false,
            "type": "field-list"
        },
        {
            "key": "docebo-course-code-field",
            "name": "<b>Docebo Course Code</b>",
            "required": false,
            "type": "field-list"
        },
        {
            "key": "docebo-course-name-field",
            "name": "<b>Docebo Course Name</b>",
            "required": false,
            "type": "field-list"
        }
    ],

    "system-settings": [
        {
            "key": "google-project-id",
            "name": "<b>Google Cloud Project ID</b><br/>The Google Cloud Project ID that contains the secrets used for authentication to Docebo API.",
            "required": true,
            "type": "text"
        },
        {
            "key": "docebo-access-token",
            "name": "<b>Docebo Access Token</b><br/>Access token for Docebo API.",
            "required": false,
            "type": "text"
        },
        {
            "key": "docebo-refresh-token",
            "name": "<b>Docebo Refresh Token</b><br/>Refresh token for Docebo API.",
            "required": false,
            "type": "text"
        },
        {
            "key": "docebo-token-expiry",
            "name": "<b>Docebo Access token Expiry timestamp</b><br/>Timestamp when the access token expires.",
            "required": false,
            "type": "text"
        }
    ],

    "crons": [
        {
            "cron_name": "docebo-enrollment-cron",
            "cron_description": "Cron that runs daily to check on Participant enrollment status in Docebo and update the status field in REDCap accordingly.",
            "method": "updateDoceboEnrollmentInfo",
            "cron_frequency": "86400",
            "cron_max_run_time": "3600"
        }
    ],

    "compatibility": {
        "php-version-min": "",
        "php-version-max": "",
        "redcap-version-min": "",
        "redcap-version-max": ""
    }
}
